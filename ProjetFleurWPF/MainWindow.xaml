<Window x:Class="ProjetFleurWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetFleurWPF"
        xmlns:views="clr-namespace:ProjetFleurWPF.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox Width="100" Margin="5" Text="{Binding Nom, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox Width="80" Margin="5" Text="{Binding Prix, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox Width="100" Margin="5" Text="{Binding Couleur, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox Width="150" Margin="5" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Width="100" Margin="5" Content="Ajouter" Command="{Binding AjouterFleurCommand}"/>
        </StackPanel>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Fleurs}" AutoGenerateColumns="True" />
    </Grid>
</Window>
